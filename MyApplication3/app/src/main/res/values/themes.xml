            10sp
        </item>

        <item name="android:textColor">
            #7C7C7C
        </item>

    </style>

    <style name="name">

        <item name="android:textSize">
            10sp
        </item>

        <item name="android:textColor">
            #000000
        </item>

    </style>
    <style name="date">

        <item name="android:textSize">
            8sp
        </item>

        <item name="android:textColor">
            #A5A5A5
        </item>

    </style>


</resources>