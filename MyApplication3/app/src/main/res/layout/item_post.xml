<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="116dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                app:layout_constraintTop_toTopOf="@id/ic_profile"
                app:layout_constraintStart_toEndOf="@id/ic_profile"
                android:gravity="top"
                android:text="B1ND"
                android:textColor="#000000"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/postdate"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toEndOf="@id/ic_profile"
                android:gravity="top"
                android:text="2023.02.07"
                android:textAppearance="@style/date"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp" />

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/ic_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ducami"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/postDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대구소프트웨어마이스터고등학교 공식 교육 봉사 동아리, 두카미 입니다!"
                android:textColor="#000000"
                android:textSize="10sp"
                android:maxLines="5"
                app:layout_constraintTop_toBottomOf="@id/ic_profile"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp" />

            <View
                android:id="@+id/eye"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/ic_eye"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/viewer"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="1K"
                android:textSize="8sp"
                android:textColor="#7c7c7c"
                android:layout_marginLeft="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/eye"
                app:layout_constraintStart_toEndOf="@+id/eye" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>